package com.ict.edu;

public class Ex01 {
	public static void main(String[] args) {
		// 단순 if : 조건이 참일때만 실행 , 거짓을때는 if문 무시
		// 조건식 : boolean , 비교(논리)연산
		// 형식 : if(조건식){
		// 조건식이 참일때 실행 문장;
		// 조건식이 참일때 실행 문장;
		// }
		// 단, 실행문장이 한 줄 일 때는 { } 생략 가능

		// int k1 이 60이상이면 합격,
		int k1 = 50;
		String str = "초기값";
		if (k1 >= 60) {
			str = "합격";
		}
		System.out.println("결과:" + str);
		System.out.println("수고하셨습니다.");

		// int k2 이 60이상이면 합격, 60 미만은 불합격
		int k2 = 59;
		str = "초기값";
		if (k2 >= 60) {
			str = "합격";
		}
		if (k2 < 60) {
			str = "불합격";
		}
		System.out.println("결과:" + str);
		
		// k2 나 k3 는 같다. k3가 더 간편
		// int k3 이 60이상이면 합격, 60 미만은 불합격
		int k3 = 59;
		str = "불합격";
		if (k3 >= 60) {
			str = "합격";
		}
		System.out.println("결과:" + str);
		
		// 홀수 짝수 판별
		int k4 = 7;
		str = "홀수";
				if ((k4 % 2) == 0) {
					str = "짝수";
					System.out.println("결과:" + str);
				}
		
		// 대문자,소문자 판별 문제
		char k5 = 'b';
		String str4 = "대문자";
		if (k5 >= 'a' && k5 <= 'z') {
			str4= "소문자";
			System.out.println("결과:" + str4);
		}
		
		// 1 또는 3이면 남자 , 아니면 여자
		int k6 = 1;
		str = "여자";
		if ((k6 == 1) || (k6 ==3)) {
			str = "남자";
			System.out.println("결과:" + str);
			
		}
		
		
		// 근무시간이 8시간까지는 시간당 8590이고
		// 8시간을 초과한 시간 만큼은 1.5배 지급한다.
		// 현재 근무한 시간이 10이다.
		// 얼마를 받아야 하는가?
		
		int time = 10 ; 
		int dan = 8590;
		double dan1 = 8590*1.5;
		int pay = time*dan;
		if (time>8) {pay =(int)((time-8)*dan1 + 8*dan);
		System.out.println(pay);
			
		}
		
		//두 수 중 큰 값을 출력하시오.
		
		int k7 = 25;
		int k8 = 15 ;
		int result = 0;
		result= k8 ;
		if (k7 > k8) {
			result = k7;
			System.out.println("결과:" + result);
			
		}
		
	}
}
