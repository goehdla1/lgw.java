package com.ict.edu;

public class Ex01 {
	public static void main(String[] args) {
		// 단순 if : 조건이 참일때만 실행 , 거짓을때는 if문 무시
		// 조건식 : boolean , 비교(논리)연산
		// 형식 : if(조건식){
		// 			조건식이 참일때 실행 문장;
		// 			조건식이 참일때 실행 문장;
		// 			}
		// 단, 실행문장이 한 줄 일 때는 { }  생략 가능
		
		// int k1 이 60이상이면 합격,
		int k1 = 50;
		String str = "합격";
		if(k1>=60){
			System.out.println("결과:" + str);
			System.out.println("수고하셨습니다.");
		}
	}
}
